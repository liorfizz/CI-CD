pipeline {
    agent any

    environment {
        EC2_test_IP = "18.185.15.37"
        EC2_prod_IP = "18.195.117.231"
        externalIP = null
    }

    stages {
        stage('Clean and Clone git') {
            steps {
                sh 'pwd'
                sh 'rm -rf *'
                sh 'git clone https://github.com/liorfizz/ci-cd.git'
            }
        }

        stage('Build and Cleanup Container') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    sh "docker login -u ${DOCKER_USERNAME} -p ${DOCKER_PASSWORD}"
                    sh 'echo "apply the script"'
                    sh 'cd ci-cd/alpacaflask && python3 pythonversioning.py'
                }
            }
        }

        stage('Testing Kubernetes') {
            steps {
                script {
                    sh 'gcloud container clusters get-credentials test-cluster --region=europe-central2'
                    sh 'cd ci-cd && kubectl apply -f withredis.yaml'
                }
            }
        }
        
        stage('Get External IP') {
            steps {
                script {
                    // Run the kubectl command to get the external IP and store the output in a file
                    sh 'kubectl get svc flask-app-service --no-headers | awk \'{print $4}\' > external_ip_qa.txt'
                }
            }
        }

        stage('Testing Q/A') {
            steps {
                script {
                    // Read the value of the external IP from the file
                    def externalIP = readFile('external_ip_qa.txt').trim()
                    // Set 'externalIP' as an environment variable to use it in the shell script
                    env.externalIP = externalIP
                    sh '''
                    curl_output=$(curl -s -o /dev/null -w "%{http_code}" http://${externalIP}:5000)
                    if [ "$curl_output" -eq "200" ]; then
                        echo "Site is working (200 OK)"
                    else
                        echo "Error: Site is not working"
                        exit 1
                    fi
                    '''
                }
            }
        }

        stage('Running Kubernetes') {
            steps {
                script {
                    sh 'gcloud container clusters get-credentials flask-cluster --region=europe-central2'
                    sh 'cd ci-cd && kubectl apply -f withredis.yaml'
                }
            }
        }
    }
}
